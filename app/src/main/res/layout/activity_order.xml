<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderActivity">

    <TableRow
        android:id="@+id/tableRow_coke"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_order3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/coca_cola" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:text="Coca Cola (Rp.10000)" />

        <TextView
            android:id="@+id/qty_coke"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:text="TextView" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow_aqua"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow_coke" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/aqua" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:text="Aqua\n(Rp.6000) " />

        <TextView
            android:id="@+id/qty_aqua"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow_apple"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow_aqua">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/apple_juice" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="Jus Apel\n(Rp.12000)" />

        <TextView
            android:id="@+id/qty_apel"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow_avocado"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow_apple">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/avocado_juice" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="Jus Alpukat\n(Rp.14000)" />

        <TextView
            android:id="@+id/qty_alpukat"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:text="TextView" />
    </TableRow>

    <Button
        android:id="@+id/my_order3"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:onClick="myOrder"
        android:text="My Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:onClick="orderMore"
        android:text="Order More"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow_avocado" />
</androidx.constraintlayout.widget.ConstraintLayout>